{
  "compilerOptions": {
    "declaration": true,
    "target": "es6",
    "module": "es6",
    "strict": true,
    "strictNullChecks": false,
    "moduleResolution": "Node",
    "sourceMap": true,
    "skipLibCheck": true,
    "stripInternal": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}